{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "./scripts/build.sh",
			"windows": {
				"command": ".\\scripts\\build.cmd"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "open ChloeVM.app",
			"windows": {
				"command": ".\\scripts\\run.cmd"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		}
	]
}